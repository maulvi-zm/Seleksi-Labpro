<div class="w-full min-h-full flex flex-col items-center justify-center">
  <div class="fixed top-0 left-0 w-full h-full -z-10">
    <img
      src="/assets/index/background.png"
      alt="background"
      class="w-full h-full object-cover"
    />
  </div>
  <div
    class="bg-[#0f0f0f] mx-auto my-10 p-10 rounded-2xl space-y-8 w-[90%] sm:w-[70%] md:w-[50%] lg:w-[45%] xl:w-[40%]"
  >
    <h1 class="text-white w-full text-center text-2xl">Register</h1>

    <form
      action="/register"
      method="post"
      class="space-y-4 w-full"
      id="registerForm"
    >
      <sl-input
        label="Email"
        help-text="Please fill your email"
        type="email"
        required
        name="email"
      ></sl-input>
      <sl-input
        label="Username"
        help-text="Please fill your username"
        required
        name="username"
      ></sl-input>
      <div class="grid grid-cols-2 space-x-4">
        <sl-input
          label="First Name"
          help-text="Please fill your first name"
          required
          name="first_name"
        ></sl-input>
        <sl-input
          label="Last Name"
          help-text="Please fill your last name"
          required
          name="last_name"
        ></sl-input>
      </div>
      <sl-input
        label="Password"
        help-text="Please fill your password"
        type="password"
        required
        name="password"
        minlength="8"
      ></sl-input>
      <sl-input
        label="Password"
        help-text="Please retype your password"
        type="password"
        required
        name="password_confirmation"
        minlength="8"
      ></sl-input>
      <div class="w-full flex justify-between items-center">
        <a href="/login" class="text-red-700 underline"
          >Already have an account?</a
        >
        <button
          type="submit"
          class="bg-gray-600 text-white px-4 py-2 rounded-md font-semibold cursor-not-allowed"
          id="registerButton"
        >
          Register
        </button>
      </div>
    </form>
  </div>
</div>
